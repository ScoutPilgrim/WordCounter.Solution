@using WordCounter.Models;

<h1>To Do List</h1>

<ul>
@if (Model.Count == 0)
{
  <p>You have played no games!</p>
}
@if(Model.Count != 0)
{
  @foreach (RepeatCounter item in Model)
  {
    <li><a href='/wordcounter/@item.GetId()'>@item.GetWordCount())</a></li>
  }
}
</ul>

<a href="/wordcounter/new">Play.</a>

<form action="/wordcounter/delete" method="post">
  <button type="submit" name="button">Clear All Rounds</button>
</form>
